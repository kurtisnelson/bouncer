{
        "opsworks": {
                "layers": {
                        "rails-app": {
                                "instances": {
                                        "rails-app1": {"private-ip": "10.10.10.10"}
                                }
                        },
                        "db-master": {
                                "instances": {
                                        "db-master1": {"private-ip": "10.10.10.20"}
                                }
                        }
                }
        },
        "deploy": {
                "bouncer": {
                        "application_type": "rails",
                        "document_root": "",
                        "scm": {
                                "scm_type": "git",
                                "repository": "."
                        },
                        "database": {
                                "adapter": "postgresql",
                                "encoding": "unicode"
                        }
                }
        },
        "opsworks_custom_cookbooks": {
                "enabled": true,
                "scm": {
                        "repository": "https://github.com/MonsieurCode/cookbooks.git"
                }
        }
}
